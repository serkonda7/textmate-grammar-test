{
"compilerOptions": {
    "target": "es2021",
    "outDir": "./dist",
    "module": "preserve",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*",
  ],
}
