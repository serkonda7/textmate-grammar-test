  "license": "MIT",
  "author": "serkonda7",
  "homepage": "https://github.com/serkonda7/textmate-grammar-test",
  "repository": {
    "type": "git",
    "url": "https://github.com/serkonda7/textmate-grammar-test"
  },
  "bugs": {
    "url": "https://github.com/serkonda7/textmate-grammar-test/issues"
  },
    "keywords": [
    "test",
    "unit-test",
    "textmate",
    "grammar",
    "visual",
    "studio",
    "code"
  ],
  "bin": {
    "textmate-grammar-test": "./dist/unit.js",
    "textmate-grammar-snap": "./dist/snapshot.js"
  },
  "scripts": {
    "build": "npx tsc",
    "coverage": "npx nyc --reporter=html mocha -r ts-node/register \"test/**/*.test.ts\"",
    "format": "prettier --config .prettierrc \"src/**/*.ts\" \"test/**/*.ts\" --write",
    "lint": "tslint -c tslint.json \"src/**/*.ts\"",
    "test": "mocha -r ts-node/register \"test/**/*.test.ts\""
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a",
  "dependencies": {
    "bottleneck": "^2.19.5",
    "chalk": "^2.4.2",
    "commander": "^9.2.0",
    "diff": "^4.0.2",
    "glob": "^7.1.6",
    "vscode-oniguruma": "^1.5.1",
    "vscode-textmate": "^7.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/diff": "^4.0.2",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.9",
    "@types/xml2js": "^0.4.11",
    "chai": "^4.2.0",
    "mocha": "^11.1.0",
    "nyc": "^17.1.0",
    "prettier": "^2.1.2",
    "ts-node": "^8.10.2",
    "tslint": "^5.20.1",
    "typescript": "^5.1.6",
    "xml2js": "^0.6.0"
  }
}
