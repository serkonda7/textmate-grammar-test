{
  "name": "textmate-grammar-test",
  "description": "Test runner for VSCode textmate grammars",
  "version": "0.3.3",
  "license": "MIT",
  "author": "serkonda7",
  "homepage": "https://github.com/serkonda7/textmate-grammar-test",
  "repository": {
    "type": "git",
    "url": "https://github.com/serkonda7/textmate-grammar-test"
  },
  "bugs": {
    "url": "https://github.com/serkonda7/textmate-grammar-test/issues"
  },
  "keywords": [
    "test",
    "unit-test",
    "textmate",
    "tmgrammar",
    "grammar",
    "visual",
    "studio",
    "code"
  ],
  "type": "module",
  "bin": {
    "textmate-grammar-test": "./dist/unit.js",
    "textmate-grammar-snap": "./dist/snapshot.js"
  },
  "files": ["dist/"],
  "scripts": {
    "test": "bun run check && bun run build:dev && bun test",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "lint:ci": "biome ci",
    "check": "bunx tsgo",
    "build:dev": "bun run check && bun run scripts/build.ts --dev",
    "build": "bun run check && bun run scripts/build.ts --prod",
    "prepack": "bun run build"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "bun@1.3.6",
  "dependencies": {
    "@serkonda7/ts-result": "~1.0.1",
    "chalk": "~5.6.2",
    "commander": "~14.0.2",
    "diff": "~8.0.3",
    "glob": "~13.0.0",
    "vscode-oniguruma": "~2.0.1",
    "vscode-textmate": "~9.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "~2.3.11",
    "@types/bun": "~1.3.6",
    "@types/diff": "~8.0.0",
    "@types/node": "~22.19.7",
    "@typescript/native-preview": "~7.0.0-dev.20260118.1",
    "fast-xml-parser": "~5.3.3"
  }
}
