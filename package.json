{
  "name": "textmate-grammar-test",
  "description": "Test runner for VSCode textmate grammars",
  "version": "0.2.2-dev",
  "license": "MIT",
  "author": "serkonda7",
  "homepage": "https://github.com/serkonda7/textmate-grammar-test",
  "repository": {
    "type": "git",
    "url": "https://github.com/serkonda7/textmate-grammar-test"
  },
  "bugs": {
    "url": "https://github.com/serkonda7/textmate-grammar-test/issues"
  },
  "keywords": [
    "test",
    "unit-test",
    "textmate",
    "tmgrammar",
    "grammar",
    "visual",
    "studio",
    "code"
  ],
  "type": "module",
  "bin": {
    "textmate-grammar-test": "./dist/unit.js",
    "textmate-grammar-snap": "./dist/snapshot.js"
  },
  "scripts": {
    "test": "mocha \"test/**/*.test.ts\"",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "lint:ci": "biome ci",
    "check": "bunx tsc",
    "build:dev": "bun run check && bun run scripts/build.ts --dev",
    "build": "bun run check && bun run scripts/build.ts --prod"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "bun@1.3.4",
  "dependencies": {
    "bottleneck": "^2.19.5",
    "chalk": "^2.4.2",
    "commander": "^9.2.0",
    "diff": "^4.0.2",
    "glob": "~13.0.0",
    "vscode-oniguruma": "~2.0.1",
    "vscode-textmate": "~9.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "~2.3.9",
    "@types/bun": "~1.3.4",
    "@types/chai": "^4.2.11",
    "@types/diff": "^4.0.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "~20.19.26",
    "@types/xml2js": "^0.4.11",
    "chai": "^4.2.0",
    "mocha": "^11.1.0",
    "typescript": "~5.9.3",
    "xml2js": "^0.6.0"
  }
}
