{
  "name": "textmate-grammar-test",
  "description": "Test runner for VSCode textmate grammars",
  "version": "0.2.5",
  "license": "MIT",
  "author": "serkonda7",
  "homepage": "https://github.com/serkonda7/textmate-grammar-test",
  "repository": {
    "type": "git",
    "url": "https://github.com/serkonda7/textmate-grammar-test"
  },
  "bugs": {
    "url": "https://github.com/serkonda7/textmate-grammar-test/issues"
  },
  "keywords": [
    "test",
    "unit-test",
    "textmate",
    "tmgrammar",
    "grammar",
    "visual",
    "studio",
    "code"
  ],
  "type": "module",
  "bin": {
    "textmate-grammar-test": "./dist/unit.js",
    "textmate-grammar-snap": "./dist/snapshot.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE.txt"
  ],
  "scripts": {
    "test": "mocha \"test/**/*.test.ts\"",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "lint:ci": "biome ci",
    "check": "bunx tsc",
    "build:dev": "bun run check && bun run scripts/build.ts --dev",
    "build": "bun run check && bun run scripts/build.ts --prod",
    "prepack": "bun run build",
    "publish": "bun pm pack --filename textmate-grammar-test.tgz && npm publish ./textmate-grammar-test.tgz"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "bun@1.3.4",
  "dependencies": {
    "chalk": "~5.6.2",
    "commander": "^9.2.0",
    "diff": "~8.0.2",
    "glob": "~13.0.0",
    "p-limit": "~7.2.0",
    "vscode-oniguruma": "~2.0.1",
    "vscode-textmate": "~9.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "~2.3.9",
    "@types/bun": "~1.3.4",
    "@types/chai": "^4.2.11",
    "@types/diff": "~8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "~20.19.27",
    "chai": "^4.2.0",
    "fast-xml-parser": "~5.3.3",
    "mocha": "^11.1.0",
    "typescript": "~5.9.3"
  }
}
