{
  "$schema": "https://www.schemastore.org/tmlanguage.json",
  "name": "Testlang",
  "scopeName": "source.xy",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#whitespace-scopes" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.xy",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.xy",
          "match": "\\bvar\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.xy",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "variable.interpolation.xy",
              "match": "@\\{([^}]+)\\}",
              "captures": {
                "1": {
                  "name": "meta.label.xy"
                }
              }
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.int.xy",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "whitespace-scopes": {
      "match": "@scope-whitespace@",
      "name": "  scope\t  \t whitespace\ns  "
    }
  }
}
